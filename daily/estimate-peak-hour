	0.187048, 0.160770, 0.147445, 0.116840,
);

@bike_scale = (
	0.096140, 0.093555, 0.067540, 0.052375,
	0.061350, 0.035492, 0.040221, 0.029561,
	0.035189, 0.029704, 0.025297, 0.024676,
	0.021027, 0.021253, 0.033272, 0.028487,
